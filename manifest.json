{
    "name": "Matrix-Discord bridge",
    "id": "matrix-puppet-discord",
    "packaging_format": 1,
    "description": {
        "en": "A Discord puppeting bridge for Matrix/Synapse.",
        "fr": "Passerelle Discord pour Matrix/Synapse."
    },
    "version": "0.1.6~ynh1",
    "url": "https://github.com/matrix-discord/mx-puppet-discord",
    "upstream": {
        "license": " Apache-2.0",
        "website": "https://github.com/matrix-discord/mx-puppet-discord",
        "admindoc": "https://github.com/matrix-discord/mx-puppet-discord",
        "code": "https://github.com/matrix-discord/mx-puppet-discord"
    },
    "license": "Apache-2.0",
    "maintainer": {
        "name": "fflorent",
        "email": "florent.git@zeteo.me"
    },
    "requirements": {
        "yunohost": ">= 4.1.0"
    },
    "multi_instance": true,
    "services": [
        "postgresql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "synapsenumber",
                "type": "string",
                "ask": {
                    "en": "Choose the local synapse instance number to communicate with the Discord-Matrix bridge",
                    "fr": "Choisissez le numéro de l'instance synapse qui doit communiquer avec la passerelle Discord-Matrix"
                },
                "example": "2 (for instance synapse__2)",
                "help": {
                    "en": "If you installed synapse only once time, then leave default value 1.",
                    "fr": "Si vous n'avez installé qu'une fois synapse, gardez la valeur par défaut 1."
                },
                "default": "1"
            }
        ]
    }
}
